{
	"fileExtensions": [
		"app/styles-babel/**/*",
		"app/styles/*"
	],
	"spaceAfterPropertyColon": {
		"enabled": true,
		"style": "one_space"
		// Comments are allowed
	},
	"zeroUnit": {
		"style": "no_unit"
	},
	"qualifyingElement": {
		"allowWithAttribute": true,
		"allowWithClass": true,
		"allowWithId": true
	},
	"importantRule": false,
	"finalNewline": false
}